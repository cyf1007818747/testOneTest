<template name="question-list">
  <block wx:for="{{questions}}">
    <view wx:if="{{index == stage}}">
      <view class="weui-progress__bar">
        <view class="weui-progress__inner-bar js_progress" style="width:{{percentage}}%;"></view>
      </view>
      <view class="weui-btn_cell weui-btn_cell-primary" style="opacity: 0.7;">
        <text>\n</text>
        <view>{{stage + 1}}. {{item.question}}</view>
        <text>\n</text>
      </view>
      <block wx:for="{{item.choices}}">
        <view class="weui-btn_cell weui-btn_cell-default" bindtap="chosen" id="{{index}}" hover-class="selected-choice" hover-stay-time="{{delayTime}}"
        style="opacity: 0.7; margin:10rpx;">{{item}}</view>
      </block>
    </view>
  </block>
</template>

<template name="tests">
  <block wx:for="{{array}}">
    <navigator url='../main/main?id={{item.title}}' class="weui-cell weui-cell_access" open-type="redirect"><!-- @@@@@@ url内部字符串拼接的良好示范 -->
        <view class="weui-cell__hd">
            <image src="{{item.img}}" style="margin-right: 16rpx; vertical-align: middle; width:200rpx; height: 120rpx;"></image>
        </view>
        <view class="weui-cell__bd">{{item.title}}</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">进入</view>
    </navigator>
  </block>
</template>