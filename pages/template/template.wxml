<template name="question-list">
  <block wx:for="{{questions}}">
    <view wx:if="{{index == stage}}">
      <view class="question">{{item.question}}</view>
      <view class="choices">
        <block wx:for="{{item.choices}}">
          <view class="choice" bindtap="chosen" id="{{index}}">{{item}}</view>
        </block>
      </view>
    </view>
  </block>
</template>

<template name="tests">
  <block wx:for="{{array}}">
    <view class="item" bindtap="chosen" id="{{item.title}}">
      <view>
        <image src="{{item.img}}" style="width:75px;height:58px;"></image>
      </view>
      <view class="desc">
        <view class="title">{{item.title}}</view>
      </view>
    </view>
    <view class="hr2"></view>
  </block>
</template>