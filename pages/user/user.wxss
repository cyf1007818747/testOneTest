/* pages/user/user.wxss */
.container{
  align-items: center;
  background-color: #EDEDED;
  height: 100vh;
  display: block;
}

.userinfo {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #777777;
}

.usermotto {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  width: 90%;
}

.user-motto{
  text-align: left;
  font-size: 30rpx;
}

.pulldown{
  position:absolute;
  right:20rpx;
  color: #cccccc;
  font-size: 25rpx;
}

.hr2 {
  height: 5px;
  width: 95%;
  background-color: #ccc;
  margin: 5rpx;
}

.history{
  width: 100%;
}

.history-item{
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 10rpx;
  margin: 5px;
  border-left: 12rpx solid #E74C3C;
  background-color:#ffe1d4;
  border-radius: 5px;
  width: 95%;
  height: 150rpx;
}

.history-title{
  font-size: 15px;
}

.history-result{
  font-size: 20px;
  text-align: right;
  color: #995226;
}